{
  "name": "tiny-iiif",
  "version": "6.1.3",
  "description": "Example server for node-iiif using @tinyhttp",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "dev": "IIIF_IMAGE_PATH=${IIIF_IMAGE_PATH:-./tiff} nodemon",
    "lint": "eslint *.ts",
    "lint-fix": "eslint --fix *.ts",
    "tiny-iiif": "IIIF_IMAGE_PATH=./tiff tsx index.ts",
    "dev:all": "concurrently -n build,server -c blue,green \"npm run --prefix ../.. build:watch\" \"npm run dev\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samvera/node-iiif.git"
  },
  "keywords": [
    "docker",
    "iiif",
    "image",
    "vips",
    "libvips"
  ],
  "author": "Michael B. Klein",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/samvera/node-iiif/issues"
  },
  "homepage": "https://github.com/samvera/node-iiif#readme",
  "dependencies": {
    "@tinyhttp/app": "^2.0.25",
    "@tinyhttp/logger": "^1.3.0",
    "iiif-processor": "../..",
    "openseadragon": "^5.0.1",
    "serve-static": "^1.16.2",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "@eslint/js": "^9.19.0",
    "eslint": "^9.19.0",
    "typescript-eslint": "^8.22.0",
    "node-addon-api": "^8.4.0",
    "node-gyp": "^9.3.1",
    "nodemon": "^2.0.21",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.0"
  }
}
